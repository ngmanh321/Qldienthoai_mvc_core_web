<script>

    function Signup() {

        var tk = $("#tentk").val();
        var mk = $("#matkhau").val();
        var remk = $("#repeatmatkhau").val();



        if (tk == "" && mk == "" || mk != remk ) {
            swal("Bạn Chưa Nhập Thông Tin!", "Vui Lòng Kiểm Tra Lại", "warning");
            return false;
        } else{

        
        let formData = {
            TenTK:  $("#tentk").val(),
            MatKhau: $("#matkhau").val(),
            LoaiTK: "1",


        }

        $.ajax({
            type: "POST",
            url: "https://localhost:7281/api/api3/",
            data: JSON.stringify(formData),
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (response) {
                swal("Xin chúc mừng!", "Đơn hàng đã dang ki thành công ", "success");
            },
            error: function (request, status, error) {
                alert(request.responseText);
            },
        });
       }
    }

</script>


