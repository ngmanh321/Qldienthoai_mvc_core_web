
@{
    ViewData["Title"] = "DanhMucHangSX";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<button><a asp-action="ThemHangSX">Create New</a></button>

@using BTL_Web.Models ;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Hangsanxuat>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<p> @TempData["Message"] </p>

<table class="table table-bordered">
    <thead>
        <tr class="table-info">
            <th>
                <p>Ma Hang SX</p>
            </th>
            <th>
                <p>Ten Hang SX</p>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-success">
                <td>
                    @Html.DisplayFor(modelItem => item.Mahang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tenhang)
                </td>

                <td>
                    <a asp-action="SuaHangSX" asp-route-mahang="@item.Mahang">Edit</a> |
                    <a asp-action="XoaHangSX" asp-route-mahang="@item.Mahang">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager(Model,page => Url.Action("DanhMucHangSX", new {page=page}),new X.PagedList.Web.Common.PagedListRenderOptions(){
	LiElementClasses = new List<String> {"page-item"},
	PageClasses = new List<String> {"page-link"}
})
